<MyLabel@Label>
    font_size: "24sp"
    background_color: (.06, .06, .06, 1)
    size_hint: 1, .5
    color: (230/255,230/255,230/255,1)
    canvas.before:
        Color:
            rgba: self.background_color
        Rectangle:
            size: self.size
            pos: self.pos

<MyCheckBox@CheckBox>
    background_color: (.06, .06, .06, 1)
    size_hint: .33, 1
    color: (97/255,131/255,88/255,100)
    canvas.before:
        Color:
            rgba: self.background_color
        Rectangle:
            size: self.size
            pos: self.pos

<MyButton@Button>
    font_size: "30sp"
    color: (230/255,230/255,230/255,1)
    background_color: (97/255,131/255,88/255,1)

<MySpinner@Spinner>
    background_color: (.20, .20, .20, 1)
    font_size: "24sp"
    size_hint: 1, 1

<DataSpinner@Spinner>
    background_color: (.20, .20, .20, 1)
    font_size: "24sp"
    size_hint: .33, 1

<MainScreen>
    name: "main"
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        padding: 10
        spacing: 10

        MyLabel:
            id: mission_label
            text: root.mission_type
            font_size: "32sp"
        MyLabel:
            text: root.today_data
        MyLabel:
            id: mission_day_label
            text: root.mission_day
        BoxLayout:
            orientation: "vertical"
            size_hint: 1, 4
            spacing: 10
            BoxLayout:
                id: chart
                size_hint: 1, 3
        BoxLayout:
            size_hint: 1, 1.5
            padding: 0
            spacing: 0
            orientation: "vertical"
            MyLabel:
                size_hint: 1, 1
                text: "dni poza obszarem misji:"
            BoxLayout:
                MyButton:
                    font_size: "30sp"
                    text: "-"
                    on_press: root.mission_out_days(self.text, out_mission_label.text)
                MyLabel:
                    id: out_mission_label
                    size_hint: 1, 1
                    text: root.out_mission_days
                MyButton:
                    font_size: "30sp"
                    text: "+"                   
                    on_press: root.mission_out_days(self.text, out_mission_label.text)                    
        BoxLayout:
            orientation: "vertical"
            MyLabel:
                text: "zarobiłeś:"
            MyLabel:
                id : earning_label
                text: root.mission_earning
                font_size: "32sp"
                color: (97/255,131/255,88/255,1)
        BoxLayout:
            padding: 0
            spacing: 0
            Button:
                background_color: 0,0,0,0
                on_press:
                    root.home_button_on()
                on_release:
                    root.home_button_off()
                Image:
                    id: home_image
                    source:"img/home_green.png"
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y
            Button:
                background_color: 0,0,0,0
                on_press:
                    root.settings_button_on()
                on_release:
                    root.settings_button_off()
                    root.manager.current = 'settings'
                    root.manager.transition.direction = 'left'
                Image:
                    id: settings_image
                    source:"img/settings_white.png"
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y
            Button:
                background_color: 0,0,0,0
                on_press:
                    root.info_button_on()
                on_release:
                    root.info_button_off()
                    root.manager.current = 'info'
                    root.manager.transition.direction = 'left'
                Image:
                    id: info_image
                    source:"img/info_white.png"
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y


<SettingScreen>
    name: "settings"
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        padding: 10
        spacing: 10

        MySpinner:
            id: mission_spinner
            text: root.mission_text
            values: app.contingent_list
            on_text: root.mission_clicked(mission_spinner.text)
        BoxLayout:
            orientation: "vertical"
            size_hint: 1, 1.4
            MyLabel:
                text: "data rozpoczęcia:"
            BoxLayout:
                size: root.width, root.height
                padding: 0
                spacing: 0
                DataSpinner:
                    id: s_y_spinner
                    text: root.start_year_text
                    values: app.years_list
                    on_text: root.start_year_clicked(s_y_spinner.text)
                DataSpinner:
                    id: s_m_spinner
                    text: root.start_month_text
                    values: app.months_list
                    on_text: root.start_month_clicked(s_m_spinner.text)
                DataSpinner:
                    id: s_d_spinner
                    text: root.start_day_text
                    values: app.days_list
                    on_text: root.start_day_clicked(s_d_spinner.text)
        BoxLayout:
            orientation: "vertical"
            size_hint: 1, 1.4
            MyLabel:
                text: "data zakończenia:"
            BoxLayout:
                size: root.width, root.height
                padding: 0
                spacing: 0
                DataSpinner:
                    id: e_y_spinner
                    text: root.end_year_text
                    values: app.years_list
                    on_text: root.end_year_clicked(e_y_spinner.text)
                DataSpinner:
                    id: e_m_spinner
                    text: root.end_month_text
                    values: app.months_list
                    on_text: root.end_month_clicked(e_m_spinner.text)
                DataSpinner:
                    id: e_d_spinner
                    text: root.end_day_text
                    values: app.days_list
                    on_text: root.end_day_clicked(e_d_spinner.text)
        MySpinner:
            id: range_spinner
            text: root.mil_range_text
            values: app.range_list
            on_text: root.range_clicked(range_spinner.text)
        GridLayout:
            cols: 2
            MyLabel:
                size_hint: .66, 1
                text:"lekarz ze spec."
            MyCheckBox:
                group: "doctors"
                id: check_spec
                on_active: root.checkbox_clicked(self, self.active)
            MyLabel:
                size_hint: .66, 1
                text:"lekarz"
            MyCheckBox:
                group: "doctors"
                id: check_doc
                on_active: root.checkbox_clicked(self, self.active)
        
        MyButton:
            text: "zapisz"
            font_size: "24sp"
            on_press:
                root.safe_clicked(mission_spinner.text, range_spinner.text, check_spec.active, check_doc.active, s_y_spinner.text, s_m_spinner.text, s_d_spinner.text, e_y_spinner.text, e_m_spinner.text, e_d_spinner.text)

        BoxLayout:
            padding: 0
            spacing: 0
            Button:
                background_color: 0,0,0,0
                on_press:
                    root.home_button_on()
                on_release:
                    root.home_button_off()
                    root.manager.current = 'main'
                    root.manager.transition.direction = 'right'
                Image:
                    id: home_image
                    source:"img/home_white.png"
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y
            Button:
                background_color: 0,0,0,0
                on_press:
                    root.settings_button_on()
                on_release:
                    root.settings_button_off()
                Image:
                    id: settings_image
                    source:"img/settings_green.png"
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y
            Button:
                background_color: 0,0,0,0
                on_press:
                    root.info_button_on()
                on_release:
                    root.info_button_off()
                    root.manager.current = 'info'
                    root.manager.transition.direction = 'left'
                Image:
                    id: info_image
                    source:"img/info_white.png"
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y

