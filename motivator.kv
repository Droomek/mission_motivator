<MyLabel@Label>
    font_size: 24
    background_color: (.06, .06, .06, 1)
    size_hint: 1, .5
    color: (230/255,230/255,230/255,1)
    canvas.before:
        Color:
            rgba: self.background_color
        Rectangle:
            size: self.size
            pos: self.pos

<MyButton@Button>
    size_hint: (.1, .7)
    font_size: 20
    color: (230/255,230/255,230/255,1)
    background_color: (97/255,131/255,88/255,1)

<MySpinner@Spinner>
    background_color: (.06, .06, .06, 1)
    font_size: 24
    size_hint: 1, .5

<MainScreen>
    name: "main"
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        padding: 10
        spacing: 10

        MyLabel:
            id: mission_label
            text: "Wybierz misję"
            font_size: 32
        MyLabel:
            text: root.today_data
        MyLabel:
            text: root.mission_day
        BoxLayout:
            orientation: "vertical"
            size_hint: 1, 4
            spacing: 10
            BoxLayout:
                id: chart
                size_hint: 1, 3
        MyLabel:
            text: "Zarobiłeś:"
        MyLabel:
            text: root.mission_earning
            font_size: 32
            color: (97/255,131/255,88/255,1)
        BoxLayout:
            MyButton:
                text: "Ustawienia"
            MyButton:
                text: "Dalej"
                on_press:
                    root.manager.current = 'settings'
                    root.manager.transition.direction = 'left'


<SettingScreen>
    name: "settings"
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        padding: 10
        spacing: 10

        MySpinner:
            id: mission_spinner
            text: "Wybierz Misję"
            values: ["PKW Łotwa", "PKW Irak", "PKW Kosowo"]
            on_text: root.mission_clicked(mission_spinner.text)
        MyLabel:
            text: "Data Przyjazdu"
        MyLabel:
            text: "Data Wyjazdu"
        MySpinner:
            id: range_spinner
            text: "Wybierz stopień etatowy"
            values: ["szer.", "st. szer.", "kpr.", "st. kpr.", "plut.", "sierż.", "st. sierż.", "mł. chor.", "chor.", "st. chor.", "st. chor. sztab.", "ppor.", "por.", "kpt.", "mjr", "ppłk", "płk", "gen. bryg.", "gen. dyw.", "gen. bron."]
            on_text: root.range_clicked(range_spinner.text)
        MyButton:
            text: "Potwierdź"
            size_hint: (1 , 1)
            on_release: 
                app.root.current = "main"
                root.manager.screens[0].ids.mission_label.text = root.ids.mission_spinner.text
        BoxLayout:
            MyButton:
                text: "Ustawienia"
            MyButton:
                text: "Wróć"
                on_press:
                    root.manager.current = 'main'
                    root.manager.transition.direction = 'right'
